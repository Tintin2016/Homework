<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.survey.Main2Activity">


    <TextView
        android:id="@+id/tV0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.您所在年龄段："
        android:textSize="50px"
        />

    <RadioGroup
        android:id="@+id/rG0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tV0">

        <RadioButton
            android:id="@+id/rG0_B0"
            android:text="A.18岁以下"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:id="@+id/rG0_B1"
            android:text="B.18-35岁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:id="@+id/rG0_B2"
            android:text="C.36-45岁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.性别"
        android:layout_below="@id/rG0"
        android:textSize="50px"
        />

    <RadioGroup
        android:id="@+id/rG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tV1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="A.男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rG1_B0" />

        <RadioButton
            android:text="B.女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rG1_B1" />


    </RadioGroup>

    <TextView
        android:id="@+id/tV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.您经常锻炼频率是每周多少次"
        android:layout_below="@id/rG1"
        android:textSize="50px"
        />

    <RadioGroup
        android:id="@+id/rG2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tV2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="A.0次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rG2_B0" />

        <RadioButton
            android:text="B.1-2次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rG2_B1" />

        <RadioButton
            android:text="C.3-4次 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rG2_B2" />

    </RadioGroup>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一页"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
